                    plusBtn.addEventListener('click', () => {
                        let value = parseInt(countOutput.innerHTML);

                        value++;
                        countOutput.innerHTML = value;
                    })

                    minusBtn.addEventListener('click', () => {
                        let value=parseInt(countOutput.innerHTML)

                        if (value > 1) {
                            value--;
                        }

                        countOutput.innerHTML = value;
                    })


